{% apply inky_to_html|inline_css(source('@styles/foundation-emails.css'), source('@styles/email.css')) %}
    <container>
        <row>
            <columns>
                <spacer size="15"></spacer>
                <a href="{{ url('home_index') }}">
                    <img src="{{ email.image('@images/email/logo.png') }}" class="logo" alt="SpaceBar Logo">
                </a>
            </columns>
        </row>
        <row class="welcome">
            <columns>
                <spacer size="35"></spacer>
                <h1>
                    <center>
                        {{ contact.firstname }} {{ contact.lastname }}
                    </center>
                </h1>
                <spacer size="10"></spacer>
            </columns>
        </row>
        <spacer size="30"></spacer>
        <row>
            <columns>
                <p>
                    <strong>Email</strong> : {{ contact.email }}
                </p>
                <p>
                    <strong>Objet</strong> : {{ contact.object }}
                </p>
                <p>
                    You received an email from <strong>{{ contact.firstname }} {{ contact.lastname }}</strong> :
                </p>
                <p>
                    {{ contact.message }}
                </p>
            </columns>
        </row>
        <row class="bottom">
            <columns>
                <center>
                    <spacer size="20"></spacer>
                    <div>
                        Thanks, see you later !!!
                    </div>
                </center>
            </columns>
        </row>
    </container>
{% endapply %}
