{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid banner">
        {% for category, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ category }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
        <div class="row justify-content-center align-items-center">
            <p class="text-banner">{{ banner.message }}</p>
        </div>
    </div>
    <div class="container">
        <div class="row no-gutters my-5 justify-content-between">
            {% for category in categories %}
                <div class="col-md-4 my-3">
                    <h3 class="text-center font-weight-bold">{{ category.name }}</h3>
                    <img class="mt-3" src="{{ asset('uploads/files/' ~ category.image) }}" width="360px" height="300px" alt="{{ category.name }}">
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}